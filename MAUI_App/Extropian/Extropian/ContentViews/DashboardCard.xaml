<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    x:Class="Extropian.ContentViews.DashboardCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Frame 
        Padding="12"
        Margin="8"
        CornerRadius="12"
        HasShadow="True"
        BackgroundColor="White">

        <VerticalStackLayout Spacing="8">
            <Label 
                x:Name="TitleLabel"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="Black"/>

            <Image 
                x:Name="CardImage"
                HeightRequest="150"
                Aspect="AspectFill" />

            <Label 
                x:Name="DescriptionLabel"
                FontSize="14"
                TextColor="Gray"/>
        </VerticalStackLayout>
    </Frame>
</ContentView>
